<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/product_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.wwez.twomenulist.fragments.ProductFragment">

    <LinearLayout
        android:id="@+id/content_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="7">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="3dp"
                android:background="#f8f8f8"
                android:gravity="center_vertical"
                android:paddingLeft="6dp"
                android:text="商品分类"
                android:textColor="#000"
                android:textSize="15sp" />
            <ListView
                android:id="@+id/side_menu_lv"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="#f8f8f8"
                android:layout_marginTop="46dp"
                android:divider="@color/white"
                android:dividerHeight="1dp"/>
        </FrameLayout>
        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="3"
            android:background="@color/white" >
            <ListView
                android:id="@+id/menu_lvmenu"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_gravity="center"
                android:divider="@null"
                android:listSelector="@drawable/list_selector_product_bg"/>
            <LinearLayout
                android:id="@+id/title_layout"
                android:layout_width="fill_parent"
                android:layout_height="47dp"
                android:layout_gravity="right|top"
                android:orientation="vertical"
                android:layout_marginLeft="3dp"
                >

                <TextView
                    android:id="@+id/title_layout_catalog"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="#f8f8f8"
                    android:textColor="#000"
                    android:gravity="center_vertical"
                    android:textSize="15sp"
                    android:paddingLeft="5dp"
                    />
            </LinearLayout>
        </FrameLayout>
    </LinearLayout>

</RelativeLayout>
