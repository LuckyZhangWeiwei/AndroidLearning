<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:wwez="http://schemas.android.com/apk/res-auto/com.example.wwez.myapplication"
    tools:context="com.example.wwez.viewPagerIndicator.ViewPagerIndicator_MainActivity">
   <com.example.wwez.viewPagerIndicator.ViewPagerIndicator
       android:id="@+id/id_indicator"
       android:layout_width="match_parent"
       android:layout_height="45dp"
       android:orientation="horizontal"
       android:background="#030303"
       wwez:visible_tab_count ="4" />
    <android.support.v4.view.ViewPager
        android:id="@+id/id_viewpager"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp" />
</LinearLayout>
